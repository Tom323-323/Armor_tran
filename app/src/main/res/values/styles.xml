<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorPrimary">@color/main_theme_haki</item>
        <item name="colorPrimaryDark">@color/main_theme_haki_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar" tools:ignore="ResourceCycle">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorPrimary">@color/main_theme_haki</item>
        <item name="colorPrimaryDark">@color/main_theme_haki_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="newRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/style_rating_bar_main</item>
        <item name="android:minHeight">18dip</item>
        <item name="android:maxHeight">18dip</item>
    </style>

</resources>
